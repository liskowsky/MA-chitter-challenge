<center>

  <form action="/peep" method="post">
    <label for="peep">
      Your peep: <input type="text" name="peep_content">
    </label><br><br>
    <input type="submit" name="submit" value="Peep">
  </form>

   <h1> PEEPS </h1>
   <ul id='peeps'>
     <% @peeps.each do |peep| %>
        <%= peep.author %>:  <%= peep.content %><br><br>
     <% end %>
   </ul>

</center>
